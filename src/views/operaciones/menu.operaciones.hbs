<script>
    // Función para verificar si hay notificaciones pendientes para el usuario
    async function verificarNotificacionesPendientes() {
        try {
            // Realizar una solicitud al servidor para verificar las notificaciones pendientes
            const response = await fetch('/verificar-notificaciones');
            const data = await response.json();
            
            // Si hay notificaciones pendientes, mostrar el número en la campana
            if (data.notificacionesPendientes) {
                document.getElementById('numNotificacionesSinLeer').innerText = '1';
            }
        } catch (error) {
            console.error('Error al verificar las notificaciones pendientes:', error);
        }
    }

    // Llamar a la función para verificar notificaciones pendientes cuando se cargue la página
    verificarNotificacionesPendientes();

    // Función para mostrar las notificaciones cuando se haga clic en la campana
    function mostrarNotificaciones() {
        const contenedorNotificaciones = document.getElementById('contenedorNotificaciones');
        contenedorNotificaciones.style.display = 'block';
    }

    // Función para marcar una notificación como leída
    function marcarComoLeida(elemento) {
        // Aquí puedes agregar la lógica para marcar la notificación como leída en el servidor
        // luego, puedes ocultar la notificación en el cliente
        const notificacion = elemento.parentElement;
        notificacion.style.display = 'none';
    }

    // Función para eliminar una notificación
    function eliminarNotificacion(elemento) {
        // Aquí puedes agregar la lógica para eliminar la notificación en el servidor
        // luego, puedes eliminarla del DOM en el cliente
        const notificacion = elemento.parentElement;
        notificacion.remove();
    }
</script>



