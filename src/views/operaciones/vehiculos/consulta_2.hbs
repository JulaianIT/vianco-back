// Función para descargar el contenido como una imagen PNG
function descargarComoPNG() {
    console.log("Descargando como PNG...");
    const container = document.querySelector('.png'); // Selecciona el contenedor principal
    

    // Ajusta el tamaño de fuente del contenedor
    container.style.fontSize = "34px"; // Por ejemplo, ajusta el tamaño de fuente a 24px
    
    html2canvas(container).then(canvas => { // Convierte el contenido a un lienzo
        const imgData = canvas.toDataURL('image/png'); // Convierte el lienzo a datos de imagen PNG
        const link = document.createElement('a'); // Crea un elemento de enlace
        link.href = imgData; // Establece el atributo href con los datos de la imagen
        link.download = 'hoja_de_vida_vehiculo.png'; // Establece el nombre de descarga
        link.click(); // Simula un clic en el enlace para iniciar la descarga
        
        // Restablece el tamaño de fuente del contenedor después de la descarga
        container.style.fontSize = "16px"; // Restablece el tamaño de fuente a 16px (o el valor que desees)
    });
}

// Agrega un evento click al botón de descarga
document.getElementById('descargar-btn').addEventListener('click', descargarComoPNG);

