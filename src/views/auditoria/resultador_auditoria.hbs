<div class="container">
    <h1>CONTROL AUDITORIA</h1>
    <table>
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Responsable</th>
                 <th>Base</th>
                <th>Placa</th>
                <th>inspeccion</th>
                <th>supervision</th>
              <th>programacion</th>
             <th>turno Extra</th>
                <th>total</th>
                  <th>% de cumplimineto</th>

            </tr>
        </thead>
        <tbody>
            {{#each resultados}}
            <tr>
<td>{{formatDate this.fecha}}</td>
                <td>{{this.responsable}}</td>
                <td>{{this.base}}</td>
                <td>{{this.placa}}</td>

                <td>{{this.inspeccion}}</td>
                <td>{{this.supervision}}</td>
               <td>{{this.programacion}}</td>
                <td>{{this.turno_extra}}</td>
                 <td>{{this.total}}</td>
                <td>{{this.porcentajeCumplimiento}}%</td> <!-- Nuevo campo para el porcentaje de cumplimiento -->


            </tr>
            {{/each}}
        </tbody>
    </table>

</div>
<script>
    // Funci√≥n para formatear la fecha
    function formatDate(dateString) {
        const date = new Date(dateString);
        const day = String(date.getDate()).padStart(2, '0');
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const year = date.getFullYear();
        return `${day}/${month}/${year}`;
    }
</script>

