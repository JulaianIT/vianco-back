    </header>

    <div class="container">
        <div class="heading">
            <h1>Contabilidad - Placa: {{ contabilidad.placa }}</h1>
        </div>

        <form action="/guardar-edicion-contabilidad" method="POST">
            <label for="placa"><strong>Placa:</strong></label>
            <input type="text" id="placa" name="placa" value="{{ contabilidad.placa }}" readonly>
            
            <!-- Agrega campos para otros atributos de contabilidad -->
            <label for="actividadEconomica"><strong>Actividad Económica:</strong></label>
            <input type="text" id="actividadEconomica" name="actividadEconomica" value="{{ contabilidad.Actividad_economica }}">
            
            <label for="nombreBanco"><strong>Nombre del Banco:</strong></label>
            <input type="text" id="nombreBanco" name="nombreBanco" value="{{ contabilidad.Nombre_del_banco }}">
            
            <label for="tipoCuentaBancaria"><strong>Tipo de Cuenta Bancaria:</strong></label>
            <input type="text" id="tipoCuentaBancaria" name="tipoCuentaBancaria" value="{{ contabilidad.Tipo_de_cuenta_bancaria }}">
            
            <label for="numeroCuenta"><strong>Número de Cuenta:</strong></label>
            <input type="text" id="numeroCuenta" name="numeroCuenta" value="{{ contabilidad.Numero_de_cuenta }}">
            
            <label for="tipoDocumento"><strong>Tipo de Documento de Quien Recibe el Pago:</strong></label>
            <input type="text" id="tipoDocumento" name="tipoDocumento" value="{{ contabilidad.tipo_documento }}">
            
            <label for="cedula"><strong>Cédula:</strong></label>
            <input type="text" id="cedula" name="cedula" value="{{ contabilidad.Cedula }}">
            
            <label for="identificacion"><strong>Identificación:</strong></label>
            <input type="text" id="identificacion" name="identificacion" value="{{ contabilidad.Identificacion }}">
            
            <label for="nombre"><strong>Nombre:</strong></label>
            <input type="text" id="nombre" name="nombre" value="{{ contabilidad.Nombre }}">
            
            <label for="direccion"><strong>Dirección:</strong></label>
            <input type="text" id="direccion" name="direccion" value="{{ contabilidad.Direccion }}">
            
            <label for="celular"><strong>Celular:</strong></label>
            <input type="text" id="celular" name="celular" value="{{ contabilidad.Celular }}">
            
            <label for="email"><strong>Email:</strong></label>
            <input type="text" id="email" name="email" value="{{ contabilidad.Email }}">
            
            <!-- Agrega más campos según los atributos de tu tabla de contabilidad -->

            <button type="submit">Guardar Cambios</button>
            <a href="/consulta-contabilidad" class="volver-btn">Volver al Menú</a>
        </form>
