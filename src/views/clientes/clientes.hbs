        <script>
        // Primero, ocultamos todos los detalles de los clientes
        document.querySelectorAll('.cliente-info').forEach(function(cliente) {
            cliente.style.display = 'none';
        });

        // Luego, agregamos un event listener al select para mostrar solo el cliente seleccionado
        document.getElementById('clientes-select').addEventListener('change', function() {
            var nombreClienteSeleccionado = this.value;
            // Ocultamos todos los detalles de los clientes
            document.querySelectorAll('.cliente-info').forEach(function(cliente) {
                cliente.style.display = 'none';
            });
            // Mostramos solo los detalles del cliente seleccionado
            var clienteSeleccionado = document.querySelector('.cliente-info[data-nombre="' + nombreClienteSeleccionado + '"]');
            if (clienteSeleccionado) {
                clienteSeleccionado.style.display = 'block';
            }
        });
    </script>
    <script>
        document.querySelectorAll('.edit-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var clienteInfo = this.closest('.cliente-info');
                clienteInfo.querySelectorAll('.input-container').forEach(function(container) {
                    container.style.display = 'block';
                });
                clienteInfo.querySelectorAll('.info-value').forEach(function(span) {
                    span.style.display = 'none';
                });
                clienteInfo.querySelector('.edit-btn').style.display = 'none';
                clienteInfo.querySelector('.save-btn').style.display = 'inline-block';
            });
        });
        document.querySelectorAll('.save-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                var clienteInfo = this.closest('.cliente-info');
                var changes = {};
                clienteInfo.classList.add('editing'); // Agregado

                clienteInfo.querySelectorAll('.info input').forEach(function(input) {
                    changes[input.className] = input.value;
                });

                console.log('Cambios a guardar:', changes); // Agregado para depuración

                fetch('/actualizar_cliente', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        nombre: clienteInfo.dataset.nombre,
                        ...changes
                    })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error al actualizar el cliente');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Cliente actualizado correctamente:', data);
                    // Aquí puedes agregar lógica adicional si es necesario
                    // Ocultar campos de edición y mostrar campos de información
                    clienteInfo.querySelectorAll('.input-container').forEach(function(container) {
                        container.style.display = 'none';
                    });
                    clienteInfo.querySelectorAll('.info-value').forEach(function(span) {
                        span.style.display = 'inline-block';
                    });
                    clienteInfo.querySelector('.edit-btn').style.display = 'inline-block';
                    clienteInfo.querySelector('.save-btn').style.display = 'none';
                })
                .catch(error => {
                    console.error('Error al actualizar el cliente:', error);
                    // Mostrar mensaje de error al usuario si es necesario
                });
            });
        });
    </script>
