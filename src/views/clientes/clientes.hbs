            {{#each clientes}}
                <option value="{{nombre}}">{{nombre}}</option>
            {{/each}}
        </select>
            <br>
        <br>
          <br>
        <div class="container">
            {{#each clientes}}
                <div class="cliente-info" data-nombre="{{nombre}}">
                    <img src="{{imagen}}" alt="{{nombre}}">
                    <div class="info">
                        <br>
                        <h2>{{nombre}}</h2>
                        <hr>
                        <p><strong>CONTRATANTE:</strong> <div class="input-container"><input class="contratante" type="text" value="{{contratante}}"></div><span class="info-value contratante">{{contratante}}</span></p>
                        <br>
