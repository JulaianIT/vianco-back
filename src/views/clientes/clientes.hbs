                        <br>
                        <p><strong>RUT:</strong> <div class="input-container"><input class="rut" type="text" value="{{rut}}"></div><span class="info-value rut">{{rut}}</span></p>
                        <br>
                        <p><strong>CAMARA Y COMERCIO:</strong> <div class="input-container"><input class="camara_comercio" type="text" value="{{camara_comercio}}"></div><span class="info-value camara_comercio">{{camara_comercio}}</span></p>
                        <br>
                        <p><strong>FECHA DE CUMPLEAÑOS:</strong> <div class="input-container"><input class="cumpleaños" type="text" value="{{cumpleaños}}"></div><span class="info-value cumpleaños">{{cumpleaños}}</span></p>
                        <br>

                         <p><strong>DIRECCION:</strong> <div class="input-container"><input class="direccion" type="text" value="{{direccion}}"></div><span class="info-value direccion">{{direccion}}</span></p>
                         <br>
                         <p><strong>RESPONSABLE:</strong> <div class="input-container"><input class="responsable" type="text" value="{{responsable}}"></div><span class="info-value responsable">{{responsable}}</span></p>
                         <br>
                                                  <p><strong>CEDULA:</strong> <div class="input-container"><input class="cedula" type="text" value="{{cedula}}"></div><span class="info-value celular">{{cedula}}</span></p>
                                                  <br>

