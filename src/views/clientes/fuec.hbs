<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seleccionar Cliente y Placa</title>
</head>
<body>
  <h1>Seleccionar Cliente y Placa</h1>
  <label for="cliente">Selecciona el cliente:</label>
  <select id="cliente">
    <!-- Las opciones de cliente se llenarán dinámicamente con JavaScript -->
  </select>
  <br>
  <label for="placa">Selecciona la placa del vehículo:</label>
  <select id="placa">
    <!-- Las opciones de placa se llenarán dinámicamente con JavaScript -->
  </select>
  <br>
  <button onclick="buscarInformacion()">Buscar Información</button>

  <div id="resultado"></div>


  <script>


document.addEventListener('DOMContentLoaded', function() {
  fetch('/clientes')
    .then(response => response.json())
    .then(data => {
      console.log('Clientes cargados:', data);
      const clienteSelect = document.getElementById('cliente');
      data.forEach(cliente => {
        const option = document.createElement('option');
        option.value = cliente.id;
        option.textContent = cliente.nombre;
        clienteSelect.appendChild(option);
      });
    });
});

// Llenar select de placas al cargar la página
fetch('/vehiculos')
  .then(response => response.json())
  .then(data => {
    const placaSelect = document.getElementById('placa');
    data.forEach(vehiculo => {
      const option = document.createElement('option');
      option.value = vehiculo.placa;
      option.textContent = vehiculo.placa;
      placaSelect.appendChild(option);
    });
  });
function buscarInformacion() {
  const clienteSelect = document.getElementById('cliente');
  const nombreCliente = clienteSelect.options[clienteSelect.selectedIndex].text; // Obtener el nombre del cliente

  console.log('Nombre del cliente seleccionado:', nombreCliente);

  if (!nombreCliente || nombreCliente === 'undefined' || nombreCliente === '' || nombreCliente === null) {
    alert('Por favor selecciona un cliente válido.');
    return;
  }

  const placaSelect = document.getElementById('placa');
  const placa = placaSelect.value;

  console.log('Placa seleccionada:', placa);

  if (!placa || placa === 'undefined' || placa === '' || placa === null) {
    alert('Por favor selecciona una placa válida.');
    return;
  }

  fetch(`/fuec/${encodeURIComponent(nombreCliente)}/${placa}`) // Codificar el nombre del cliente
    .then(response => response.text())
    .then(html => {
      document.getElementById('resultado').innerHTML = html;
    });
}



</script>

  </script>
</body>
</html>
