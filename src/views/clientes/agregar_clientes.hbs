      <div class="container">
        <div class="heading"><h1>AGREGAR CLIENTE </h1></div>
<form action="/agregar-cliente" method="POST">
    <label for="nombre">NOMBRE:</label>
    <input type="text" id="nombre" name="nombre"><br><br>

    <label for="rut">RUT:</label>
    <input type="text" id="rut" name="rut"><br><br>

    <label for="camara_comercio">CAMARA Y COMERCIO:</label>
    <input type="text" id="camara_comercio" name="camara_comercio"><br><br>

 <label for="cumpleaños">FECHA DE CUMPLEAÑOS:</label>
<input type="date" id="cumpleaños" name="cumpleaños"><br><br>

    <label for="N_contrato">N° DE CONTRATO:</label>
    <input type="text" id="N_contrato" name="N_contrato"><br><br>

    <label for="contratante">CONTRATANTE:</label>
    <input type="text" id="contratante" name="contratante"><br><br>

    <label for="nit">N° DE NIT:</label>
    <input type="text" id="nit" name="nit"><br><br>

    <label for="direccion">DIRECCION:</label>
    <input type="text" id="direccion" name="direccion"><br><br>

 <label for="correoacta">correoacta:</label>
    <input type="text" id="correoacta" name="correoacta"><br><br>



