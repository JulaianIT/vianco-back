<br>
<br>
{{#if programacion}}
    <table>
        <thead>
            <tr>
                <th>Base</th>
                <th>Placa</th>
                <th>Fecha</th>
                <th>Horario</th>
                <th>Observaciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each programacion}}
                <tr>
                    <td>{{this.base}}</td>
                    <td>{{this.placa}}</td>
                    <td>{{formatDate this.fecha}}</td> <!-- Llama a la función formatDate para formatear la fecha -->
                    <td>{{this.horario}}</td>
                    <td>{{this.observaciones}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No se encontraron resultados.</p>
{{/if}}

<script>
    // Función para formatear la fecha en el formato DD/MM/AAAA
    function formatDate(dateString) {
        const date = new Date(dateString);
        const day = date.getDate().toString().padStart(2, '0');
        const month = (date.getMonth() + 1).toString().padStart(2, '0');
        const year = date.getFullYear();
        return `${day}/${month}/${year}`;
    }
</script>

