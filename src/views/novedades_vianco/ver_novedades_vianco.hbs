<body>
<div style="display: flex;">
    <div class="table-container">
                  <h2 id="tituloNovedades">SERVICIOS NO CONFORMES</h2>

        <table class="table">




<div id="novedadesContainer"></div>
            <!-- Contenido de la tabla -->
        </table>
    </div>
    <div class="form-container">
        <form id="formBusqueda">
            <h2>Buscar Servicio No Conforme</h2>
            <div>
                <label for="id">N° del Servicio:</label>
                <input type="text" id="id" name="id">
            </div>
            <div>
                <label for="fechaInicio">Fecha Inicio:</label>
                <input type="date" id="fechaInicio" name="fechaInicio">
            </div>
            <div>
                <label for="fechaFin">Fecha Final:</label>
                <input type="date" id="fechaFin" name="fechaFin">
            </div>
            <div>
                <label for="keyword">Palabra Clave:</label>
                <input type="text" id="keyword" name="keyword">
            </div>
            <div>
                <label for="pendiente">ESTADO:</label>
                <select id="pendiente" name="pendiente" onchange="cambiarTitulo(this)">
                    <option value="true">nuevas</option>
                    <option value="false">en proceso</option>
                     <option value="false">completas</option>
                </select>
            </div>
            <div>
                <button type="submit" class="ver">Ver Novedades</button>
                <a href="/" class="volver-btn">Volver al Menú</a>
            </div>
        </form>
    </div>
</div>



<footer>
    <section>
        <p>Derechos Reservados &copy; 2024</p>
        <p class="bad">Desarrollado por: NEXUS</p>
    </section>
</footer>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Agregamos el evento clic a todos los encabezados de novedades
            const novedadHeaders = document.querySelectorAll(".novedad h2");
            novedadHeaders.forEach(header => {
                header.addEventListener("click", function () {
                    // Buscamos el contenedor de la novedad y alternamos la clase "expandido"
                    const novedadDiv = this.parentElement;
                    novedadDiv.classList.toggle("expandido");
                    const contenido = novedadDiv.querySelector('.contenido');
                    contenido.style.display = contenido.style.display === 'none' ? 'block' : 'none';
                });
            });
        });

        function cambiarTitulo(select) {
            const titulo = document.getElementById("tituloNovedades");
            if (select.value === "true") {
                titulo.textContent = "Novedades Pendientes";
            } else if (select.value === "false") {
                     titulo.textContent = "Novedades Completadas";
            } else {
                titulo.textContent = "Todas las Novedades";
            }
        }

        document.getElementById("formBusqueda").addEventListener("submit", function (event) {
            event.preventDefault();
            const id = document.getElementById("id").value.trim();
            const fechaInicio = document.getElementById("fechaInicio").value.trim();
            const fechaFin = document.getElementById("fechaFin").value.trim();
            const keyword = document.getElementById("keyword").value.trim();
            const pendiente = document.getElementById("pendiente").value.trim(); // Obtener el valor de pendiente
            obtenerNovedades({ id, fechaInicio, fechaFin, keyword, pendiente });
        });

        document.getElementById("descargarExcel").addEventListener("click", function () {
            const fechaInicio = document.getElementById("fechaInicio").value.trim();
            const fechaFin = document.getElementById("fechaFin").value.trim();
            descargarInformeExcel(fechaInicio, fechaFin);
        });

        function obtenerNovedades(params) {
            const queryString = new URLSearchParams(params).toString();
           
            fetch(`/novedad_vianco?${queryString}`)
                .then(response => response.json())
                .then(data => mostrarNovedades(data))
                .catch(error => console.error('Error:', error));
        }
function mostrarNovedades(novedades) {
    const pendiente = document.getElementById("pendiente").value.trim(); // Obtener el valor de pendiente
    const novedadesContainer = document.getElementById("novedadesContainer");
    novedadesContainer.innerHTML = ""; // Limpiar el contenedor

    if (novedades.length === 0) {
        novedadesContainer.innerHTML = "<p>No hay novedades para los criterios de búsqueda especificados.</p>";
    } else {
        const table = crearTablaNovedades(novedades, pendiente);
        novedadesContainer.appendChild(table);
    }
}
function crearTablaNovedades(novedades, pendiente) {
    const table = document.createElement('table');
    table.classList.add('table');

    const thead = document.createElement('thead');
    const tr = document.createElement('tr');

    // Definir los encabezados de la tabla basados en el estado seleccionado
    const headers = pendiente === "true" ?
        ['N° UNICO', 'Fecha de la novedad ', 'Fecha de envio' ,'Enviada por:', 'Novedad de Tripulación', 'Novedad Hotelería', 'Novedad Ejecutivos', 'Novedad Empresas Privadas', 'Otras Novedades', 'Firma'] :
        ['N° UNICO', 'Fecha Novedad', 'Fecha de envio','Enviada por: ', 'Novedad Tripulación', 'Novedad Hotelería', 'Novedad Ejecutivos', 'Novedad Empresas Privadas', 'Otras Novedades', 'Responsable Seguimiento', 'Detalle Seguimiento', 'Fecha Seguimiento', 'Fecha Registro Seguimiento', 'Acciones a tomar', ];

    headers.forEach(headerText => {
        const th = document.createElement('th');
        th.textContent = headerText;
        tr.appendChild(th);
    });

    thead.appendChild(tr);
    table.appendChild(thead);

    const tbody = document.createElement('tbody');

    novedades.forEach(novedad => {
        const tr = document.createElement('tr');
        if (pendiente === "true") {
            tr.innerHTML = `
                <td>${novedad.id}</td>
                <td>${formatoFecha(novedad.fecha)}</td>
                <td>${formatoFecha(novedad.fecha_registro)}</td>
                <td>${novedad.realiza}</td>
                <td>${novedad.novedad_tripulacion}</td>
                <td>${novedad.novedad_hoteleria}</td>
                <td>${novedad.novedad_ejecutivos}</td>
                <td>${novedad.novedad_empresas_privadas}</td>
                <td>${novedad.otras_novedades}</td>
                <td><img src="${novedad.firma}" alt="Firma" style="max-width: 100%;"></td>
            `;
        } else {
            tr.innerHTML = `
                <td>${novedad.numeroU}</td>
                <td>${formatoFecha(novedad.fecha)}</td>
                <td>${novedad.fecha_registro}</td>
                <td>${novedad.realiza}</td>
                <td>${novedad.novedad_tripulacion}</td>
                <td>${novedad.novedad_hoteleria}</td>
                <td>${novedad.novedad_ejecutivos}</td>
                <td>${novedad.novedad_empresas_privadas}</td>
                <td>${novedad.otras_novedades}</td>
                <td>${novedad.nombre_seguimiento}</td>
                <td>${novedad.detalle_seguimiento}</td>
                <td>${novedad.fecha_seguimiento}</td>
                <td>${novedad.fecha_registro_seguimiento}</td>
                <td>${novedad.ACCIONES}</td>
            `;
        }
        tbody.appendChild(tr);
    });

    table.appendChild(tbody);
    return table;
}

// Función para formatear la fecha en "día mes año"
function formatoFecha(fechaString) {
    const fecha = new Date(fechaString);
    const dia = fecha.getDate();
    const mes = fecha.getMonth() + 1; // Los meses en JavaScript son indexados desde 0, por lo que sumamos 1
    const año = fecha.getFullYear();
    return `${dia}/${mes}/${año}`;
}


        function descargarInformeExcel(fechaInicio, fechaFin) {
            fetch('/descargar_excell', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ fechaInicio, fechaFin })
            }).then(response => response.blob())
                .then(blob => {
                    const url = window.URL.createObjectURL(new Blob([blob]));
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'informe.xlsx';
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                })
                .catch(error => console.error('Error:', error));
        }
    </script>
</body>
