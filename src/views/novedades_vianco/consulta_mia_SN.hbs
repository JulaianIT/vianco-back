<!DOCTYPE html>
<html>
<head>
    <title>Consulta de Servicios</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }
        h1, h2 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px auto;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .completada {
            background-color: #4caf50;
            color: white;
            padding: 5px 10px;
            border-radius: 3px;
        }
        .en-proceso {
            background-color: #ffeb3b;
            color: #333;
            padding: 5px 10px;
            border-radius: 3px;
        }
        p {
            text-align: center;
            color: #666;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Bienvenido, {{ nombreUsuario }}</h1>
    <h2>Consulte todos sus servicios no conformes:</h2>
    {{#if servicios.length}}
        <table>
            <thead>
                <tr>
                    <th>N° ÚNICO</th>
                    <th>Realizado por</th>
                    <th>Fecha de la novedad</th>
                    <th>Novedad de tripulación</th>
                    <th>Novedad de hotelería</th>
                    <th>Novedad de ejecutivos</th>
                    <th>Novedad de empresas privadas</th>
                    <th>NOVEDADES_TASKGO</th>
                    <th>Otras novedades</th>
                    <th>Fecha de registro</th>
                    <th>Nombre de seguimiento</th>
                    <th>Fecha de seguimiento</th>
                    <th>Detalle de seguimiento</th>
                    <th>ACCIONES</th>
                    <th>Plazo</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                {{#each servicios}}
                    <tr>
                        <td>{{ this.numeroU }}</td>
                        <td>{{ this.realiza }}</td>
                        <td>{{ this.fecha_novedad }}</td>
                        <td>{{ this.novedad_tripulacion }}</td>
                        <td>{{ this.novedad_hoteleria }}</td>
                        <td>{{ this.novedad_ejecutivos }}</td>
                        <td>{{ this.novedad_empresas_privadas }}</td>
                        <td>{{ this.NOVETADES_TASKGO }}</td>
                        <td>{{ this.otras_novedades }}</td>
                        <td>{{ this.fecha_registro }}</td>
                        <td>{{ this.nombre_seguimiento }}</td>
                        <td>{{ this.fecha_seguimiento }}</td>
                        <td>{{ this.detalle_seguimiento }}</td>
                        <td>{{ this.ACCIONES }}</td>
                        <td>{{ this.Plazo }}</td>
                        <td>
                            {{#if this.aceptadas}}
                                <span class="completada">Completada</span>
                            {{else}}
                                <span class="en-proceso">En proceso</span>
                            {{/if}}
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>No hay servicios disponibles.</p>
    {{/if}}
</body>
</html>
