        }
        .caja__trasera button:hover {
            background: #ffff;
            color: rgba(113, 112, 111);
        }
        /* Formularios */
        .contenedor__login-register {
            display: flex;
            align-items: center;
            width: 100%;
            max-width: 380px;
            position: relative;
            top: -185px;
            left: 10px;
            transition: left 500ms cubic-bezier(0.175, 0.885, 0.320, 1.275);
        }
        .contenedor__login-register form {
            width: 100%;
            padding: 80px 20px;
            background-color: #ffff;
            position: absolute;
            border-radius: 20px;
        }
        .contenedor__login-register form h2 {
            font-size: 30px;
            text-align: center;
            margin-bottom: 20px;
            color: rgba(113, 112, 111);
        }
        .contenedor__login-register form input {
            width: 100%;
            margin-top: 20px;
            padding: 10px;
            border: none;
            background-color: #f2f2f2;
