
<div class="block mx-auto my-12 p-8 bg-white w-1/3 border-gray-200 rounded-lg shadow-lg">
    <!-- Define un contenedor con estilos de Tailwind CSS -->

    <h1 class="text-5xl m-16 m text-center">iniciar sesion</h1>
    <!-- Define un encabezado con estilos de Tailwind CSS -->

    <form action="" method="post" class="mt-4">
        <!-- Define un formulario con el método POST y una acción vacía -->

        <input type="email" name="email" placeholder="digite su correo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
        <!-- Define un campo de entrada de correo electrónico con estilos de Tailwind CSS -->

        <input  type="password" name="password" placeholder="dijite su contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white " required>
        <!-- Define un campo de entrada de contraseña con estilos de Tailwind CSS -->

        <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">iniciar sesision</button>
        
      
    </form>
    <!-- Define un botón de envío con estilos de Tailwind CSS -->

    {{#if error}}
    <p class="text-red-500 font-bold text-ig my-3">{{error}}</p>
    {{/if}}
</div>
