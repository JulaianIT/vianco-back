<div class="mx-auto my-12 p-8 bg-white sm:w-2/3 md:w-1/2 lg:w-1/3 xl:w-1/4 border-gray-200 rounded-lg shadow-lg">
    <!-- Define un contenedor con estilos de Tailwind CSS -->

    <h1 class="text-4xl md:text-5xl lg:text-6xl text-center mb-8">Registrarse</h1>
    <!-- Define un encabezado con estilos de Tailwind CSS -->

    <form action="" method="post">
        <!-- Define un formulario con el método POST y una acción vacía -->

        <input type="text" name="name" placeholder="Usuario" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white rounded-md" required>
        <!-- Define un campo de entrada de texto con estilos de Tailwind CSS -->

        <input type="email" name="email" placeholder="Correo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white rounded-md" required>
        <!-- Define un campo de entrada de correo electrónico con estilos de Tailwind CSS -->

        <input type="password" name="password" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white rounded-md" required>
        <!-- Define un campo de entrada de contraseña con estilos de Tailwind CSS -->

        <button type="submit" class="bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700 rounded-md">Registrar</button>
        <!-- Define un botón de envío con estilos de Tailwind CSS -->
    </form>

    {{#if error}}
    <p class="text-red-500 font-bold text-lg my-3">{{error}}</p>
    {{/if}}
</div>
