    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('tuFormulario');
        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Evitar el envío del formulario por defecto

            // Obtener la acción y los datos del formulario
            const action = form.getAttribute('action');
            const formData = new FormData(form);

            // Enviar los datos del formulario al servidor
            fetch(action, {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Mostrar alerta de éxito
                    alert(data.message);
                    // Redireccionar o hacer cualquier otra acción necesaria
                } else {
                    // Manejar errores si es necesario
                    alert('Error al guardar los datos.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error interno del servidor.');
            });
        });
    });
</script>
<script>
    // Obtener la fecha actual
    var today = new Date();

    // Formatear la fecha como YYYY-MM-DD
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0'); // Enero es 0!
    var yyyy = today.getFullYear();

    today = yyyy + '-' + mm + '-' + dd;

    // Establecer la fecha actual como el valor predeterminado del campo de fecha
    var fechaInput = document.getElementById('fecha');
    fechaInput.value = today;

    // Hacer que el campo de fecha sea de solo lectura
    fechaInput.setAttribute('readonly', 'true');
     // JavaScript para filtrar las placas
    function filterPlacas() {
        var input, filter, select, options, option, i, txtValue;
        input = document.getElementById('search');
        filter = input.value.toUpperCase();
        select = document.getElementById('placa');
        options = select.getElementsByTagName('option');
        for (i = 0; i < options.length; i++) {
            option = options[i];
            txtValue = option.textContent || option.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                option.style.display = "";
            } else {
                option.style.display = "none";
            }
        }
    }
